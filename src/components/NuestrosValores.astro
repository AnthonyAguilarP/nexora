---
interface ValueItem {
  icon: string;
  title: string;
  description: string;
}

const defaultValues: ValueItem[] = [
  {
    icon: '💎',
    title: 'Excelencia Impecable',
    description: 'Entregamos soluciones premium donde la precisión y el acabado son imprescindibles: desde archivos para impresión hasta experiencias web optimizadas, cada detalle refleja un estándar superior de calidad.',
  },
  {
    icon: '🤝',
    title: 'Transparencia Profesional',
    description: 'Comunicación clara y procesos documentados en todas las etapas: alcance, entregables, tiempos y costes. Así garantizamos expectativas alineadas y decisiones informadas.',
  },
  {
    icon: '💡',
    title: 'Innovación Aplicada',
    description: 'Integramos prácticas y herramientas modernas (diseño editorial, optimización de LPs, generación de QR, sistemas) para soluciones efectivas y escalables que distinguen a la marca.',
  },
  {
    icon: '🔒',
    title: 'Discreción y Confidencialidad',
    description: 'Manejamos la información y los proyectos con absoluta reserva y protocolos de privacidad, ideal para clientes y marcas que exigen trato confidencial y profesional.',
  },
];

interface Props {
  title: string;
  values?: ValueItem[];
}

const { title, values = defaultValues } = Astro.props;
---

<section class="values-section">
  <div class="header-content">
    <p class="subtitle">Nuestros Pilares</p>
    <h2 class="section-title">{title}</h2>
  </div>

  <div class="values-grid">
    {values.map((value) => (
      <div class="value-card">
        <span class="value-icon">{value.icon}</span>
        <h3 class="value-title">{value.title}</h3>
        <p class="value-description">{value.description}</p>
      </div>
    ))}
  </div>
</section>

<style>
  :root {
    --color-bg-primary: #0A0A0A; 
    --color-accent: #CFA356;    
    --color-text-light: #EFEFEF;
    --color-text-subtle: #AAAAAA;
    --color-card-bg: #141414; 
  }
  .values-section {
    background-color: var(--color-bg-primary);
    padding: 6rem 1.5rem;
    text-align: center;
  }
  .header-content {
    max-width: 800px;
    margin: 0 auto 3rem;
  }
  .subtitle {
    color: var(--color-accent);
    font-size: 1rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }
  .section-title {
    font-size: 2.5rem;
    font-weight: 300;
    color: var(--color-text-light);
    line-height: 1.1;
  }
  .values-grid {
    display: grid;
    grid-template-columns: 1fr; 
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  .value-card {
    background-color: var(--color-card-bg);
    padding: 2rem;
    border-radius: 8px;
    text-align: left;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    border-left: 4px solid transparent;
  }
  .value-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(207, 163, 86, 0.2); 
    border-left: 4px solid var(--color-accent);
  }
  .value-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: 1rem;
    color: var(--color-accent);
  }
  .value-title {
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--color-text-light);
    margin-bottom: 0.5rem;
  }
  .value-description {
    font-size: 1rem;
    color: var(--color-text-subtle);
  }
  @media (min-width: 600px) {
    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 1024px) {
    .values-grid {
      grid-template-columns: repeat(4, 1fr);
    }
    .section-title {
      font-size: 3.5rem;
    }
  }
</style>